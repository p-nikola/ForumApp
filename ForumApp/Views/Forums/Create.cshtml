@model ForumApp.Models.Forum

@{
    ViewBag.Title = "Create Forum";
}

<link rel="stylesheet" type="text/css" href="~/Content/Forum/ForumCreate.css" />


<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <!-- Card Container -->
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Create a New Forum</h4>
                </div>

                <div class="card-body">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-group">
                            @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "form-label" })
                            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter forum title" } })
                            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger mt-1" })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "form-label" })
                            @Html.TextAreaFor(model => model.Description, new { @class = "form-control", rows = 4, placeholder = "Enter forum description" })
                            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger mt-1" })
                        </div>

                        <div class="d-flex justify-content-end">
                            <input type="submit" value="Create" class="btn btn-success px-4" />
                            <a href="@Url.Action("Index")" class="btn btn-secondary ml-3 px-4">Back to List</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
