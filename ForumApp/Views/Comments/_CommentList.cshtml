@model IEnumerable<ForumApp.Models.Comment>
@using Microsoft.AspNet.Identity

<!-- Make sure you have Bootstrap CSS and JS included in your layout -->
<!-- If not, you can add these lines: -->
<!-- <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"> -->
<!-- <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script> -->

<div class="container mt-4">
    @foreach (var comment in Model.OrderBy(c => c.DateCreated))
    {
        <div id="comment-wrapper-@comment.CommentId" class="card mb-3 @(comment.ParentCommentId.HasValue ? "ms-5" : "")">
            <div class="card-body">
                @if (comment.IsSoftDeleted)
                {
                    <p class="text-muted fst-italic">User deleted this comment</p>
                }
                else
                {
                    <div id="comment-@comment.CommentId">
                        <p class="card-text">@comment.Content</p>
                        <div class="d-flex align-items-center mb-2">
                            <img src="@comment.User.ProfilePictureUrl" alt="Profile Picture" class="rounded-circle me-2" style="width: 40px; height: 40px; object-fit: cover;">
                            <div>
                                @Html.ActionLink(comment.User.UserName, "Index", "Profile", new { id = comment.UserId }, new { @class = "text-decoration-none fw-bold" })
                                <small class="text-muted d-block">Posted on @comment.DateCreated</small>
                            </div>
                        </div>
                        <div id="comment-buttons-@comment.CommentId" class="d-flex flex-wrap gap-2 align-items-center">
                            <button type="button" class="btn btn-sm btn-outline-success" onclick="upvoteComment(@comment.CommentId)">
                                <i class="bi bi-hand-thumbs-up"></i> Upvote
                            </button>
                            <button type="button" class="btn btn-sm btn-outline-danger" onclick="downvoteComment(@comment.CommentId)">
                                <i class="bi bi-hand-thumbs-down"></i> Downvote
                            </button>
                            @if (comment.UserId == User.Identity.GetUserId())
                            {
                                <button type="button" class="btn btn-sm btn-outline-warning" onclick="softDeleteComment(@comment.CommentId)">
                                    <i class="bi bi-trash"></i> Delete
                                </button>
                            }
                            <button type="button" class="btn btn-sm btn-danger" onclick="deleteComment(@comment.CommentId)">Delete</button>
                            <button type="button" class="btn btn-sm btn-outline-secondary reply-button" data-bs-toggle="collapse" data-bs-target="#replyForm-@comment.CommentId">
                                <i class="bi bi-reply"></i> Reply
                            </button>
                            <small class="text-muted ms-2">
                                <span id="comment-upvotes-@comment.CommentId" class="badge bg-success">@comment.Upvotes</span> upvotes |
                                <span id="comment-downvotes-@comment.CommentId" class="badge bg-danger">@comment.Downvotes</span> downvotes
                            </small>
                        </div>
                    </div>
                }

                <div id="replyForm-@comment.CommentId" class="collapse mt-3">
                    @Html.Partial("~/Views/Comments/_ReplyForm.cshtml", new ForumApp.Models.CommentViewModel { PostId = comment.PostId, ParentCommentId = comment.CommentId })
                </div>

                @if (comment.Replies.Any())
                {
                    <div class="mt-3">
                        @Html.Partial("~/Views/Comments/_CommentList.cshtml", comment.Replies.OrderBy(r => r.DateCreated))
                    </div>
                }
            </div>
        </div>
    }
</div>